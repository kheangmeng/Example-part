<%= form_for(@movie) do |f| %>
<%= @movie.errors.full_messages.to_sentence %>
	<p>
		<%= f.label:title %><br />
		<%= f.text_field:title, autofocus: true %>
	</p>
	<p>
		<%= f.label:rating %><br />
		<%= f.text_field:rating %>
	</p>
	<p>
		<%= f.label:total_gross %><br />
		<%= f.number_field:total_gross %>
	</p>
	<p>
		<%= f.label:released_on %><br />
		<%= f.datetime_select:released_on %>
	</p>
	<p>
		<%= f.label:cast %><br />
		<%= f.text_field:cast %>
	</p>
	<p>
		<%= f.label:director %><br />
		<%= f.text_field:director %>
	</p>
	<p>
		<%= f.label:duration %><br />
		<%= f.number_field:duration %>
	</p>
	<div class="field_with_errors">
		<%= f.label:Image %><br />
		<%= f.text_field:image_file_name, size:30,
				placeholder: "Gif, jpg, npg file name" %>
	</div>
	<p>
		<%= f.label:description %><br />
		<%= f.text_area:description, cols:50, rows:10 %>
	</p>
	<%= f.submit %>
	<%= link_to "Cancel", movies_path %>
<% end %>
